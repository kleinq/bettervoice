{
  "manifest_version": 3,
  "name": "BetterVoice Learning Assistant",
  "version": "1.0.0",
  "description": "Monitors text edits in web apps to improve BetterVoice transcription accuracy",

  "permissions": [
    "nativeMessaging",
    "activeTab"
  ],

  "host_permissions": [
    "https://mail.google.com/*",
    "https://docs.google.com/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
